<%- include('./partials/product-card',{product}) %>
<div>
    <canvas id="myChart"></canvas>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
 

    const ctx = document.getElementById('myChart');

new Chart(ctx, {
  type: 'line',
  data: {
    labels: [<%- product['prices'].map(price_pointe=> "'"+price_pointe[1]+"'")%>],
    datasets: [{
      label: '# of Votes',
      data: [<%- product['prices'].map(price_pointe=> "'"+price_pointe[0]+"'")%>],
      borderWidth: 1
    }]
  },
  options: {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  }
});
  </script>
  